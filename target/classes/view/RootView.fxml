<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="br.com.objective.game.view.RootView"
            prefHeight="200.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@RootView.css"/>
    </stylesheets>
    <VBox AnchorPane.topAnchor="5.0" alignment="CENTER" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0">
        <Label text="Bem-vindo ao Goumet Game"/>
        <Label text="Pense em um belo prato de comida, porém não me diga qual!"/>
    </VBox>

    <Button AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.bottomAnchor="5.0"
            text="Ok, vamos lá!" onAction="#startClickHandle"
    />

</AnchorPane>
